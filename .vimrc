
"""""""""""""""""""""""""""""""""""""""""""""""""
" General
"""""""""""""""""""""""""""""""""""""""""""""""""

" Sets number of lines of history to remember
set history=500

" Set to autoread file when it is changed outside of VIM
set autoread

" Fix distro presets
set nocompatible

set hidden

set cmdheight=2
"""""""""""""""""""""""""""""""""""""""""""""""""
" User interface
"""""""""""""""""""""""""""""""""""""""""""""""""

" Turn on WiLd menu
set wildmenu

" Always show current position
set ruler

" Always show line numbers
set number

" Highlight current line 
set cursorline

set laststatus=2

set showcmd
"""""""""""""""""""""""""""""""""""""""""""""""""
" Colors and fonts
"""""""""""""""""""""""""""""""""""""""""""""""""
" Turn on syntax highlighting
syntax on

"""""""""""""""""""""""""""""""""""""""""""""""""
" Text, tabs and indents
"""""""""""""""""""""""""""""""""""""""""""""""""
" Automatically indent the next line
set autoindent

"""""""""""""""""""""""""""""""""""""""""""""""""
" Navigation, tabs and windows
"""""""""""""""""""""""""""""""""""""""""""""""""

" Ignore case when searching
set ignorecase

" 
set smartcase

" 
set incsearch

" Highlight search phrase
set hlsearch

" Map JK to Escape key
:imap jk <Esc>

