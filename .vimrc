
"""""""""""""""""""""""""""""""""""""""""""""""""
" General
"""""""""""""""""""""""""""""""""""""""""""""""""

" Sets number of lines of history to remember
set history=500

" Set to autoread file when it is changed outside of VIM
set autoread

"""""""""""""""""""""""""""""""""""""""""""""""""
" User interface
"""""""""""""""""""""""""""""""""""""""""""""""""

" Turn on WiLd menu
set wildmenu

" Always show current position
set ruler

"""""""""""""""""""""""""""""""""""""""""""""""""
" Colors and fonts
"""""""""""""""""""""""""""""""""""""""""""""""""


"""""""""""""""""""""""""""""""""""""""""""""""""
" Text, tabs and indents
"""""""""""""""""""""""""""""""""""""""""""""""""


"""""""""""""""""""""""""""""""""""""""""""""""""
" Navigation, tabs and windows
"""""""""""""""""""""""""""""""""""""""""""""""""

set nocompatible

syntax on

set hidden
set cmdheight=2

set showcmd

set ignorecase
set smartcase

set autoindent

set laststatus=2

:imap jk <Esc>

set number
set cursorline

set hlsearch
set incsearch

